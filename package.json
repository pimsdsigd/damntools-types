{
  "name": "@damntools.fr/streamable",
  "version": "1.0.4",
  "description": "",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist/ && npm run build:dist && npm run build:types",
    "build:dist": "rollup -c",
    "build:types": "copyfiles -u 1 src/**/*.d.ts dist/",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .  && npm run format",
    "format": "prettier --write \"**/*.+(js|ts|json|jsx|tsx|mjs|cjs)\"",
    "test": "npm run lint && npm run test:coverage:report",
    "perf": "perf",
    "test:unit": "mocha",
    "test:coverage": "c8 --all --reporter=text --reporter=text-summary npm run test:unit",
    "test:coverage:report": "c8 --all --reporter=lcov --reporter=text-summary --reporter cobertura --report-dir=coverage npm run test:unit"
  },
  "author": "flocastera",
  "publishConfig": {
    "registry": "https://nexus.dev.damntools.fr/repository/npm-private/"
  },
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.5",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.35.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "rollup": "^3.18.0",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "sinon": "^15.0.1",
    "sonarqube-scanner": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
